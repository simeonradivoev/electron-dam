    "@dnd-kit/utilities": "^3.2.2",
    "@headless-tree/core": "^1.6.0",
    "@headless-tree/react": "^1.6.0",
    "@orama/orama": "^3.1.16",
    "@orama/plugin-data-persistence": "^3.1.16",
    "@react-three/drei": "^9.122.0",
